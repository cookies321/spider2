	// 根据key删除单条记录
	public long del(String key) {
		Long result =null;
		Jedis jedis =null;
		try {
			jedis = jedisPool.getResource();
			
			Boolean exists = jedis.exists(key);
			if(exists){
				result = jedis.del(key);
			}else{
				result=(long) 0;
			}
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}finally{
			if(jedis!=null){
				jedis.close();
			}
		}
		return result;
		
	}

